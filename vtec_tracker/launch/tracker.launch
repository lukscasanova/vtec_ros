<launch>
  <arg name="reference_image_path" default="$(find vtec_tracker)/imgs/ref_img.png" />

  <!-- Tracker Nodes-->
  <node name="ibgho_tracker_node" pkg="vtec_tracker" type="ibgho_tracker_node" output="screen">
    <rosparam command="load" file="$(find vtec_tracker)/config/config.yaml"/>
    <param name="reference_image_path" value="$(arg reference_image_path)"/>
  </node>

  <node name="rviz" type="rviz" pkg="rviz" args="-d $(find vtec_tracker)/config/vtec_tracker.rviz"/>ro

</launch>